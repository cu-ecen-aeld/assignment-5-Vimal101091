#!/bin/sh

case "$1" in
    start)
        echo "Loading LDD kernel modules"
        # Load scull using the provided script
        /usr/bin/scull_load
        # Load faulty module
        modprobe faulty
        # Load hello module
        modprobe hello
        ;;
    stop)
        echo "Unloading LDD kernel modules"
        # Unload hello module
        rmmod hello
        # Unload faulty module
        rmmod faulty
        # Unload scull using the provided script
        /usr/bin/scull_unload
        ;;
    *)
        echo "Usage: $0 {start|stop}"
        exit 1
esac

exit 0
